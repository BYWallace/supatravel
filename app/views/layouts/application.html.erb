<!DOCTYPE html>
<html>
<head>
  <title>SupatravelApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
  <div class="navbar-inner">
    <ul class="nav">
      <li><%= link_to "SupaTravel", root_path, class: "brand" %></li>
      <li><%= user_signed_in? ? (link_to "Sign Out", destroy_user_session_path, :method => :delete) : (link_to "Sign In", new_user_session_path ) %></li>
      <li><%= link_to "Register", new_user_registration_path if user_signed_in? %></li>
      <li><%= link_to "Your Posts", user_posts_path(current_user) if user_signed_in? %></li>
    </ul>
  </div>
</div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <!-- two scripts required by gmaps4rails -->
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<%= yield %>

<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": 38.904779,
        "lng": -77.034210,
        "picture": {
          "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "hello!"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
</body>
</html>
