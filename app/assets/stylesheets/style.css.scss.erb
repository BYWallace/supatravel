
body{
  background: url(<%= asset_path 'swiss_alps.jpg' %>) top left no-repeat;
  background-attachment: fixed;
  color: rgba(0,0, 80, 1);
  font-family: 'EB Garamond', serif;
  margin: 0;

  .main {
    border-radius: 15px;
    box-shadow: 4px 4px 20px rgba(0,0,0,.35);
    margin: 0 auto;
    padding: 40px;
    width: 900px;

    .supatravel{
      font-family: 'Damion', cursive;
      font-size: 40px;
    }
  }

}

.nav {
  display: block;
  font-family: 'Arial';
  margin: 0 auto;
  overflow: auto;
  width: 80%;

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    background: rgba(205, 255, 117, 0.8);
    display: inline-block;
    float: right;
    margin: 0 10px;
    padding: 10px 20px;
    -webkit-transition: background 0.5s ease;
    -moz-transition: background 0.5s ease;
    -o-transition: background 0.5s ease;
    transition: background 0.5s ease;
  }

  li:hover {
    background: rgba(205, 255, 117, 1);
    -webkit-transition: background 0.5s ease;
    -moz-transition: background 0.5s ease;
    -o-transition: background 0.5s ease;
    transition: background 0.5s ease;
  }

  li:first-child {
    float: left;
    font-family: 'Damion', cursive;
    font-size: 40px;
    margin: 0;
    padding: 10px 60px;
    text-align: left;
  }
}

a:link {
  color: rgba(0,0,0,1);
  text-decoration: none;
}

a:visited{
  color: rgba(0,0,200,1);
}

div#map {
  border: 8px solid rgba(0,0, 80, 1);
  border-radius: 20px;
  box-shadow: 8px 8px 15px rgba(0,0,0,.35);
  margin: 10px auto;
  margin-left: 42px;
}
