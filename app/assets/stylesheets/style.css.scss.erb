
body{
  background: url(<%= asset_path 'swiss_alps.jpg' %>) top left no-repeat;
  background-attachment: fixed;
  color: rgba(0,0, 80, 1);
  font-family: 'EB Garamond', serif;
  margin: 0;
  overflow: auto;
}

h2, h3, h4 {
  margin: 0;
}


.main {
  border-radius: 15px;
  box-shadow: 4px 4px 20px rgba(0,0,0,.35);
  height: 100%;
  margin: 0 auto;
  padding: 0;
  width: 100%;

  .inner {
    display: block;
    margin: 0 auto;
    padding: 10px 20px;
    width: 60%;
  }

   .photo-checkboxes {
    margin: 50px 0;

      img {
        opacity: 0.5;
      }

      input {
        display: none;
      }

      li {
        display: inline;
      }

      img.selected {
          opacity: 1.0;
      }
    }

  .supatravel h1 {
    font-family: 'Damion', cursive;
    font-size: 40px;
    margin: 0;
  }
}

.navbar {
  position: absolute;
  width: 100%;
  z-index: 99;
}

.nav {
  display: block;
  font-family: 'Helvetica';
  font-weight: 300;
  margin: 0 auto;
  overflow: auto;
  width: 80%;

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    background: rgba(205, 255, 117, 0.8);
    border-bottom: 6px solid rgba(0,0, 80, 0.8);
    border-left: 2px solid rgba(0,0, 80, 0.8);
    border-right: 2px solid rgba(0,0, 80, 0.8);
    display: inline-block;
    float: right;
    margin: 0 10px;
    padding: 10px 20px;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }

  li:hover {
    background: rgba(205, 255, 117, 1);
      border-bottom: 8px solid rgba(0,0, 80, 0.8);
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }

  li:first-child {
    float: left;
    font-family: 'Damion', cursive;
    font-size: 40px;
    margin: 0;
    padding: 10px 60px;
    text-align: left;
  }
}

a:link {
  color: rgba(0,0,0,1);
  text-decoration: none;
}

a:visited{
  color: rgba(0,0,200,1);
}

div#map {
  border-bottom: 8px solid rgba(0,0, 80, 0.8);
  border-radius: 0 0 20px 20px;
  box-shadow: 8px 8px 15px rgba(0,0,0,.35);
  height: 420px;
  margin: 0 auto;
  width: 100%;
}

div#call_to_action {
  color: papayawhip;
  border: none;
  font-size: 22px;
  margin-left: 20%;
  margin-right: 20%;
  style: bold;
  text-align: center;

}

.inner-action {

  margin: 100px 0;

}
